<UserControl x:Class="Note.NotePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Width="300">
    <Border Background="LightYellow" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5">
        <Grid Margin="5">
            <!-- Definizione delle colonne -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Bottone Nota -->
            <Button Grid.Column="0" Content="Title" Height="30"
                HorizontalContentAlignment="Left" HorizontalAlignment="Stretch"
                Background="Transparent" BorderBrush="Transparent"
                Click="OpenNote" />

            <!-- Bottone Modifica -->
            <Button Grid.Column="1" Content="✏" Height="30"
                HorizontalAlignment="Stretch" Margin="5,0,5,0"
                Background="Transparent" BorderBrush="Transparent"
                Click="ModifyNote" />

            <!-- Bottone Elimina -->
            <Button Grid.Column="2" Content="🗑" Height="30"
                HorizontalAlignment="Stretch"
                Background="Transparent" BorderBrush="Transparent"
                Click="DeleteNote" />
        </Grid>
    </Border>

</UserControl>
